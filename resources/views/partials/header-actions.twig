<div class="header__inner">
	{% if auth_check() %}
		<form
			action="/movie/search"
			method="post"
			class="header__form-search"
			data-ref="searchForm"
		>
			{{ csrf_field() }}
			<input
				type="text"
				name="query"
				class="header__input header__search"
				data-ref="headerSearch"
			>
				<span
					data-ref="searchMovie"
					class="header__icon-search"
				></span>
		</form>
	{% endif %}
	<span
		class="header__icon-menu"
		data-ref="mobileNavToggle"
	></span>
	<h1 class="header__heading">
		<a
			href="{% if auth_check() %}/collection{% else %}/{% endif %}"
			class="header__heading-link"
			data-ref="headerHeading"
		>
			MMDb
		</a>
	</h1>
</div>